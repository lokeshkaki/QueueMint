{
  "name": "queuemint",
  "version": "0.1.0",
  "description": "Self-Healing Dead Letter Queue System with AI-powered failure classification",
  "private": true,
  "workspaces": [
    "services/*",
    "infrastructure"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf node_modules dist build coverage .turbo && npm run clean --workspaces",
    "deploy": "cd infrastructure && npm run deploy",
    "deploy:dev": "cd infrastructure && npm run deploy -- --profile dev",
    "deploy:staging": "cd infrastructure && npm run deploy -- --profile staging",
    "deploy:prod": "cd infrastructure && npm run deploy -- --profile prod"
  },
  "keywords": [
    "aws",
    "lambda",
    "sqs",
    "dlq",
    "dead-letter-queue",
    "ai",
    "llm",
    "claude",
    "failure-recovery",
    "serverless",
    "monitoring"
  ],
  "author": "Lokesh Kaki",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lokeshkaki/QueueMint.git"
  },
  "bugs": {
    "url": "https://github.com/lokeshkaki/QueueMint/issues"
  },
  "homepage": "https://github.com/lokeshkaki/QueueMint#readme",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
